    script(src='/socket.io/socket.io.js')
    script.
      // var socket = io();
      $( document ).ready(function(){
      var socket = io();

      $('#up').click(function(){
      var num = + $("#qty").text() + 1;
      socket.emit('test', { my: num});
      return false;
      });

      socket.on('test', function(data){
      $('#qty').append($('#qty').text(data.my));
      });

      });


